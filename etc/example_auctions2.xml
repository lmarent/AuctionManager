<?xml version ="1.0" encoding="UTF-8"?>
<!DOCTYPE AUCTIONSET SYSTEM "auctionfile.dtd"> 
<AUCTIONSET ID="General">
  <!-- global part is the default for all auctions -->
  <!-- overwritten by rule specific configuration -->
  <GLOBAL>
    <!-- how long the auctions are active - value in seconds-->
    <PREF NAME="Duration">100000</PREF>

    <!-- How often they should be run - value in seconds -->
    <PREF NAME="Interval">10</PREF>
  </GLOBAL>
  <AUCTION ID="1">
    <ACTION NAME="libbas" DEFAULT="true">
    <PREF NAME="Bandwidth" TYPE="Float32">8</PREF>
    <PREF NAME="ReservePrice" TYPE="Float64">0.012</PREF>
    </ACTION>
	<FIELD BID_TEMPL="yes" BID_OPT_TEMPL="no" ALLOC_TEMPL="yes">quantity</FIELD>
	<FIELD BID_TEMPL="yes" BID_OPT_TEMPL="no">unitbudget</FIELD>
	<FIELD BID_TEMPL="yes" ALLOC_TEMPL="yes">unitprice</FIELD>
	<FIELD BID_OPT_TEMPL="yes">bidduration</FIELD>	
  </AUCTION>
</AUCTIONSET>
